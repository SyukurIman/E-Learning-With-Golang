{{define "admin/dashboardAdmin.tmpl"}}
<!DOCTYPE html>
<html>
<head>
    <title>Sistem Pembelajaran Daring</title>
    {{template "general/header"}}
</head>
<body class="bg-gray-100">
    <header class="md:justify-between bg-blue-500 py-4 px-6 shadow-md flex flex-wrap justify-center">
    <div class="flex flex-wrap justify-between">
        <h1 class="text-white font-bold sm:text-xl text-md" >Sistem Pembelajaran Daring</h1>
    </div>

    <div class="flex flex-wrap gap-2">
        <a href="/logout" class="hover:underline rounded-xl btn sm:bg-yellow-500 sm:px-4 sm:py-2 sm:text-l px-5 bg-transparent text-sm  text-white">Keluar</a>
    </div>
  </header>
  <main class="px-6 py-4 h-screen">
    <div class="max-w-3xl mx-auto">
        <p class="text-xl font-bold mb-4">Selamat datang di Dashboard Admin</p>
        <div class="flex mb-4">
        <div class="w-1/3 px-2">
            <div class="bg-white rounded-lg shadow-md p-4">
